<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/details_icon"
        android:layout_width="247dp"
        android:layout_height="267dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/detailed_ratingBar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:stepSize="0.1"
        app:layout_constraintEnd_toEndOf="@+id/detailed_rating_value"
        app:layout_constraintStart_toStartOf="@+id/detailed_rating_value"
        app:layout_constraintTop_toBottomOf="@+id/detailed_rating_value" />

    <TextView
        android:id="@+id/detailed_rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Rating"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/details_icon"
        app:layout_constraintTop_toTopOf="@+id/details_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Relese Date"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/detailed_ratingBar"
        app:layout_constraintStart_toStartOf="@+id/detailed_ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/detailed_ratingBar" />

    <TextView
        android:id="@+id/detailed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Price"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/detailed_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/detailed_date"
        app:layout_constraintTop_toBottomOf="@+id/detailed_date" />

    <TextView
        android:id="@+id/detailed_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="5.5 $"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/price_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/price_tv"
        app:layout_constraintTop_toBottomOf="@+id/price_tv" />

    <TextView
        android:id="@+id/detailed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/details_icon"
        app:layout_constraintTop_toBottomOf="@+id/details_icon" />

    <TextView
        android:id="@+id/detailed_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/detailed_title"
        app:layout_constraintStart_toStartOf="@+id/detailed_title"
        app:layout_constraintTop_toBottomOf="@+id/detailed_title" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Description"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="@+id/detailed_author"
        app:layout_constraintTop_toBottomOf="@+id/detailed_author" />


    <EditText
        android:id="@+id/detailed_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/white"
        android:enabled="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.constraintlayout.widget.Group
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="detailed_description,textView8,detailed_author,detailed_title,detailed_price,price_tv,detailed_date,textView2,detailed_rating_value,detailed_ratingBar,details_icon" />

    <ImageView
        android:id="@+id/detailed_edit_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/edit_icon" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/detailed_edit_done"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/done" />
</androidx.constraintlayout.widget.ConstraintLayout>